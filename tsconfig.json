{
  "compilerOptions": {
    "allowJs": true,
    "outDir": "dist", // where to put the TS files
    "module": "CommonJS", // Exports modules pre ES6
    "target": "ES2017", // which level of JS support to target
    "noImplicitAny": false,
    "strict": true,
    "sourceMap": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*"]
}
